<h1>Listing cities</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Country</th>
    <th>Region</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cities.each do |city| %>
  <tr>
    <td><%= city.name %></td>
    <td><%= city.country %></td>
    <td><%= city.region %></td>
    <td><%= link_to 'Show', [:admin, city] %></td>
    <td><%= link_to 'Edit', edit_admin_city_path(city) %></td>
    <td><%= link_to 'Destroy', [:admin, city], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

