- content_for :profile do
  .panel
    .panel-content
      %div
        #dog_pic{:style=>"background: url(http://gfd.local/latest/1.jpg) no-repeat scroll left top rgb(239,239,239); height: 400px; margin-right: 15px;"}
          &nbsp;
      %div{:style=>"float: right; width: 400px"}
        <div style="background: none repeat scroll 0% 0% yellow; position: relative; top: 10px; left: -70px; -moz-border-radius: 6px 6px 6px 6px; padding: 10px;" class="bubble">
        <span style=""></span>
        "The chain hurts my neck! Get me out of here!"</div>
        .title
          %h1= @offer.name
          %p= @offer.lede
          =#image_tag 'price_short.png'
          .price
            %span.dollar-sign $
            250
          %div
            .adopt Adopt Now!
        %ul.stats
          %li.days
            %span 27 days
            <br>
            waiting for a home
          %li.days
            %span blah
            <br>
            waiting for a home
        .details
          %p#details_short
            = truncate(@offer.details, :length=>300, :separator => ' ')
            =link_to '( show more )', '#', :onclick=>"$('#details_long').show(); $('#details_short').hide(); return false;"
          %p#details_long{:style=>'display: none'}
            = @offer.details
            <br />
            =link_to '( show less )', '#', :onclick=>"$('#details_short').show(); $('#details_long').hide(); return false;"
            .share
              %p Tell your friends! Help Bessie find her perfect match.
              <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="afurgo" data-related="goodfordogs:Good For Dogs">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
              <a class="social-share-fb" onclick="return fbShare();" title="Share with Facebook">Share</a>
              <span id="share_count" class="social-share-fb-count"></span>
              %script
                =render :partial => 'shared/fbshare', :locals => {:animal => @offer}

- content_for :map do
  #gmap
    <style type="text/css">
    html { height: 100% }
    body { height: 100%; margin: 0px; padding: 0px }
    #map_canvas { height: 100% }
    </style>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    = javascript_include_tag 'map'

  .panel
    .panel-content
      .location
        %h2 Map & Location
        #google-map
          a map
        .address
          %span.place_name  RSPCA Burwood
          <br/>
          %span.street  400 Burwood Road
          <br/>
          %span.suburb Burwood, VIC, 3032
