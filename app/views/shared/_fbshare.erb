function fbShare() {
 FB.ui(
   {
     "method": "feed",
     "name": "<%= animal.name || "Name Missing" %> needs a new home",
     "link": "<%= animal.afurgo_url || 'http://afurgo.com'%>",
     "picture": "<%= animal.profile_pic_url || 'http://goodfordogs.org/latest/1.jpg' %>",
     "caption": "Please help us find one",
     "description": "<%= animal.details  || 'Details missing' %>",
     "message": "<%= animal.fbshare_msg || "Check out this great #{animal.kind || 'dog'}!"%>",
     "properties": { 
       "location" : "<%= animal.city || 'City Missing' %>",
       "sex" : "<%= animal.sex %>", 
       "age" : "<%= animal.age || 'N/A' %>"
     }
   },
   function(response) {
     if (response && response.post_id) {
       alert('Post was published.');
     } else {
       alert('Post was not published.');
     }
   }
 );
 }
