div.nav ul li {width: 220px; margin: 0 0 5px 0; display: block; display: inline-block; background: #fff; background: rgba(255,255,255, .9); -webkit-border-radius: 6px; -moz-border-radius: 6px; border-radius: 6px;}
ul li {list-style: none; padding: 0px; margin: 0px}
#left-navigation li {position: relative;}

div.nav ul {margin: 0; padding: 0; list-style: none; font-size: 16px; font-family: "Rockwell", "Rockwell MT", "American Typewriter",georgia,serif}
div.nav ul li {width: 220px; margin: 0 0 5px 0; display: block; display: inline-block; background: #fff; background: rgba(255,255,255, .9); -webkit-border-radius: 6px; -moz-border-radius: 6px; border-radius: 6px;}
div.nav ul li a {width: 200px; padding: 6px 10px 8px; text-decoration: none; display: inline-block; -webkit-border-radius: 6px; -moz-border-radius: 6px; border-radius: 6px}
div.nav ul li a:link {color: #1781C1}
div.nav ul li a:visited {color: #1781C1}
div.nav ul li a:active {margin: 0px}
div.nav ul li a:hover, div.nav ul li.selected a {color: #fff; background-color: #9BC03C; background: -webkit-gradient( linear, left bottom, left top, color-stop(0.07, rgb(155,193,59)), color-stop(0.9, rgb(184,212,26)) ); background: -moz-linear-gradient( center bottom, rgb(155,193,59) 7%, rgb(184,212,26) 90% );}
div.nav ul li.escapes {background: transparent}
div.nav ul li.escapes a {text-indent: -9999px; width: 220px; height: 91px; background: #9ec43d url("http://a1.ak.lscdn.net/deals/images/cobrand/escapes/escapes-nav.png") no-repeat center right; border-top: 1px solid #fff; padding: 10px 0 0 0; margin: 8px 0 0 0}

